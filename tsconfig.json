{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "lib",
    "target": "es2019",
    "module": "CommonJS",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "lib",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
  },
  "include": ["lib"],
}
